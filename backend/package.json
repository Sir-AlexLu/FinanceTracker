{
  "name": "finance-tracker-backend",
  "version": "1.5.0",
  "description": "Secure and scalable personal finance tracking API built with Fastify",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm install && tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "postinstall": "npm run build",
    "lint": "eslint src --ext .ts --max-warnings=0 || true",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "finance",
    "tracker",
    "fastify",
    "typescript",
    "mongodb",
    "personal-finance"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.5.0",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.25.2",
    "fastify-plugin": "^4.5.1",
    "json2csv": "^6.0.0-alpha.2",
    "mongoose": "^8.0.4",
    "node-cron": "^3.0.3",
    "pdfkit": "^0.14.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.7",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.13.4",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
